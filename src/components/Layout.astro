---
interface Props {
  title?: string;
}

const { title = 'Umar Gora' } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-black bg-white dark:text-white dark:bg-[#111010]">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta content="Founder, engineer, and traveller." name="description" />
    <meta content="index, follow" name="robots" />
    <meta
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
      name="googlebot"
    />
    <meta content="Umar Gora" property="og:title" />
    <meta
      content="Founder, engineer, and traveller."
      property="og:description"
    />
    <meta content="https://umar.codes/" property="og:url" />
    <meta content="Umar Gora" property="og:site_name" />
    <meta content="en_GB" property="og:locale" />
    <meta content="website" property="og:type" />
    <meta content="summary_large_image" name="twitter:card" />
    <meta content="Umar Gora" name="twitter:title" />
    <meta
      content="Founder, engineer, and traveller."
      name="twitter:description"
    />
  </head>
  <body
    class="antialiased max-w-2xl mb-40 flex flex-col md:flex-row mx-4 mt-8 lg:mx-auto"
  >
    <slot />
  </body>
</html>
